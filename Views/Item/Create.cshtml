@model Auction_House.Models.Item

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Item</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MinimumBid"></label>
                <input asp-for="MinimumBid" class="form-control" />
                <span asp-validation-for="MinimumBid" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageURL"></label>
                <input asp-for="ImageURL" type="file" class="form-control-file" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AuctionStart"></label>
                <input asp-for="AuctionStart" type="date" class="form-control" />
                <span asp-validation-for="AuctionStart" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AuctionEnd"></label>
                <input asp-for="AuctionEnd" type="date" class="form-control" />
                <span asp-validation-for="AuctionEnd" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ItemCondition"></label>
                <select asp-for="ItemCondition" class="form-control">
                    <option value="">--Select Item Condition--</option>
                    @foreach (var itemCondition in Enum.GetValues(typeof(ItemCondition)))
                    {
                        <option value="@itemCondition">@itemCondition</option>
                    }
                </select>
                <span asp-validation-for="ItemCondition" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ItemCategory"></label>
                <select asp-for="ItemCategory" class="form-control">
                    <option value="">--Select Item Category--</option>
                    @foreach (var itemCategory in Enum.GetValues(typeof(ItemCategory)))
                    {
                        <option value="@itemCategory">@itemCategory</option>
                    }
                </select>
                <span asp-validation-for="ItemCategory" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>
